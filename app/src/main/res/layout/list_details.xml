<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_feed_image"
            android:layout_width="@dimen/imageView_height"
            android:layout_height="@dimen/imageView_height"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:background="@drawable/circle"
            android:gravity="center_vertical" />


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/margin_5x"
            android:layout_toEndOf="@+id/iv_feed_image"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="3"
            android:text=""
            android:textColor="@color/titleColor"
            android:textSize="@dimen/title_textSize"
            android:textStyle="bold|italic" />


    </RelativeLayout>

    <TextView
        android:id="@+id/tv_feed_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="3"
        android:paddingBottom="@dimen/margin_5x"
        android:text=""
        android:textColor="@color/descColor"
        android:textSize="@dimen/desc_textSize" />


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ebebeb" />


</LinearLayout>


